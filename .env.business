# PDF Parser Pro - Business Configuration

# ==============================================
# YOUR API KEYS (You pay for these)
# ==============================================
MASTER_OPENAI_API_KEY=sk-your-master-openai-key-here
MASTER_ANTHROPIC_API_KEY=sk-ant-your-master-anthropic-key-here

# Premium keys with higher rate limits (optional)
PREMIUM_OPENAI_API_KEY=sk-your-premium-openai-key-here
PREMIUM_ANTHROPIC_API_KEY=sk-ant-your-premium-anthropic-key-here

# ==============================================
# PAYMENT PROCESSING
# ==============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==============================================
# DATABASE & CACHE
# ==============================================
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/pdf_parser_business
REDIS_HOST=localhost
REDIS_PORT=6379
DB_PASSWORD=your_secure_database_password_here

# ==============================================
# SECURITY
# ==============================================
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this-in-production
API_RATE_LIMIT=1000  # requests per hour per API key

# ==============================================
# BUSINESS SETTINGS
# ==============================================
DOMAIN=your-domain.com
ENVIRONMENT=production
DEBUG=false

# Pricing (cents)
BASIC_MONTHLY_PRICE=2900    # $29.00
PREMIUM_MONTHLY_PRICE=9900  # $99.00
ENTERPRISE_MONTHLY_PRICE=29900  # $299.00

# Usage quotas
FREE_MONTHLY_QUOTA=10
BASIC_MONTHLY_QUOTA=500
PREMIUM_MONTHLY_QUOTA=5000
ENTERPRISE_MONTHLY_QUOTA=-1  # unlimited

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
ENABLE_ANALYTICS=true
ANALYTICS_PORT=3000

# Email notifications
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@your-domain.com

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
MAX_FILE_SIZE=100MB
MAX_PAGES_PER_PDF=200
WORKER_PROCESSES=4
WORKER_TIMEOUT=600

# ==============================================
# COST OPTIMIZATION
# ==============================================
# Your markup on API costs (percentage)
OPENAI_MARKUP=150  # 150% markup (cost $0.02, charge $0.05)
ANTHROPIC_MARKUP=140  # 140% markup

# Auto-scaling settings
MIN_INSTANCES=2
MAX_INSTANCES=10
CPU_THRESHOLD=70

# ==============================================
# LEGAL & COMPLIANCE
# ==============================================
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
PRIVACY_POLICY_URL=https://your-domain.com/privacy
SUPPORT_EMAIL=support@your-domain.com